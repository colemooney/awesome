<% include ./partials/header %>
<div class="formcss">
<form action="/signup" method="POST" id="form" class="form-signin">
    <h1 class="h3 mb-3 font-weight-normal">Please sign up</h1>
    <label name="username" for="inputUser" class="sr-only"></label>User Name</label>
    <input type="text" id="username" name="username" class="form-control" placeholder="User Name" required="" autofocus="">
    
    <label name="email" for="inputEmail" class="sr-only"></label>Email</label>
    <input type="email" name="email" id="inputEmail" class="form-control" placeholder="Email" required="" autofocus="">
    
    <label name="username" for="exampleInputPassword1" class="sr-only"></label>Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required="">
    
    <div class="checkbox mb-3">
      <label>
        <input type="checkbox" value="remember-me"> Remember me
      </label>
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
    
  </form>
</div>

